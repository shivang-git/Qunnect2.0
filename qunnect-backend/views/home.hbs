<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- icon -->
    <link rel="shortcut icon" href="images/message.png" type="image/png" />

    <!-- css -->
    <link rel="stylesheet" href="/css/home.css">

    <title>Qunnect - A Messenger </title>
</head>

<body>

     <main class="content">
        <div class="container p-0">

            <h1 class="h3 mb-3">
                <a style="text-decoration: none;color: black;" href="/"> <i class="fa-regular fa-message"></i> Qunnect <i class="fa-regular fa-message"></i></a>
            </h1>

            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-12 col-lg-5 col-xl-3 border" >

                        <div class="px-4 d-none d-md-block">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <input type="text" class="form-control my-3" placeholder="Search...">
                                </div>
                            </div>
                        </div>
                        <div id="contacts"></div>

                    </div>
                    <div class="col-12 col-lg-7 col-xl-9">
                        <div class="py-2 px-2 border-bottom d-lg-block">
                            <div class="d-flex align-items-center py-1">
                                <div class="position-relative">
                                    <img src="/images/avatar.jpg" class="rounded-circle mr-1" alt={{username}} width="40" height="40">
                                </div>
                                <div class="flex-grow-1 px-1">
                                    <strong id="userhead" class="text-capitalize">{{username}}</strong>

                                    <div class="text-muted small" id="typing"></div>
                                </div>
                                <div>
                                    <button type="button" class="btn btn-info btn-primary btn-md mr-1 px-3" disabled ><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-phone feather-lg"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg></button>
                                    <button type="button" class="btn btn-info btn-primary btn-md mr-1 px-3 " disabled ><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-video feather-lg"><polygon points="23 7 16 12 23 17 23 7"></polygon><rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect></svg></button>
                                    <a href="/account/logout" id="logout"><button type="button" class="btn btn-info btn-primary btn-md mr-1 px-3 "> <i class="fa-solid fa-right-from-bracket"></i></button></a>
                                </div>
                            </div>
                        </div>

                        <div class="position-relative">
                            <div class="chat-messages p-4 pb-4">

                            </div>
                        </div>

                       <div class="flex-grow-0 py-3 px-4 border-top">
                            <form id="chat-form">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="textarea" placeholder="Type your message">
                                    <button type="submit" class="btn btn-primary" id="msg-send">Send</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>


    <footer>
        <p id="footer-para">Created By Shivang Srivastava. | Chat app on Socket.io. </p>
    </footer>

</body>
    <!-- moment library for time -->
    <script  src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js" defer></script>

    <!-- socket io intialisation -->
    <script  src="/socket.io/socket.io.js" defer></script>
    <script  src="/js/socket-client.js" defer></script>

    <script src="https://kit.fontawesome.com/6e4a4f77b5.js" crossorigin="anonymous"></script>

